{
  "include": ["src/**/*"],

  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "types": ["@cloudflare/workers-types"],
    "lib": ["ES2022"],
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  }
}
